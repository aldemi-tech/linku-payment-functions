{
  "name": "linku-payment-functions",
  "version": "1.0.0",
  "description": "Payment domain functions for Aldemi ecosystem - Stripe, Transbank, MercadoPago support",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:check": "jest --coverage --coverageReporters=text-summary",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e",
    "test:security": "npm audit && snyk test",
    "test:performance": "artillery run tests/performance/load-test.yml",
    "test:load": "artillery run tests/load/stress-test.yml",
    "test:smoke:production": "jest --testPathPattern=smoke --testTimeout=30000",
    "validate:config:production": "node scripts/validate-production-config.js",
    "check:breaking-changes": "node scripts/check-breaking-changes.js",
    "monitor:deployment:health": "node scripts/monitor-health.js",
    "validate:main": "npm run lint && npm run test && npm run build",
    "husky:install": "husky"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "firebase",
    "functions",
    "payment",
    "gateway",
    "stripe",
    "transbank",
    "tokenization"
  ],
  "author": "Aldemi Tech",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.6.0",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^5.1.1",
    "mercadopago": "^2.0.8",
    "stripe": "^13.10.0",
    "transbank-sdk": "^3.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/supertest": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "artillery": "^2.0.0",
    "audit-ci": "^6.6.0",
    "eslint": "^8.0.0",
    "husky": "^9.1.7",
    "jest": "^29.5.0",
    "snyk": "^1.1200.0",
    "supertest": "^6.3.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  }
}
